<section class="view">
  <div>
    <h2>Projects</h2>
    <table class="table-minimal">
      <thead>
        <tr>
          <th>Name</th>
          <th>Number</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td><%= link_to "#{project.name}", project %></td>
            <td><%= project.job_number %></td>
            <td><%= project.status %></td>
            <td><button class='table-button'><%= link_to "View", project %></button></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>
