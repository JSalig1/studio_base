<div class="form">
  <h2>Returning:</h2>
  <h3><%= link_to @checkout.drive.name, @checkout.drive %></h3>

  <div>
    <%= form_for @checkout, url: checkin_path do |form| %>
      <%= render 'form_errors', target: @checkout %>
      <%= form.label 'Returned by:' %>
      <%= form.text_field :returner, value: @checkout.borrower %>
      <%= form.label 'Return date:' %>
      <%= form.date_field :return_date, value: Date.today %>
      <%= form.hidden_field :status, value: 'Returned' %>
      <%= form.submit 'Return' %>
    <% end %>
  </div>

</div>
